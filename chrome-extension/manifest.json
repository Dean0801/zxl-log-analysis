{
  "manifest_version": 3,
  "name": "Grafana Log Exporter",
  "version": "1.0.0",
  "description": "从 Grafana Explore 页面一键导出 Loki 日志到日志分析工具",
  "permissions": ["storage"],
  "host_permissions": [
    "https://grafana.xkdevops.com/*",
    "https://zxl-log-analysis.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://grafana.xkdevops.com/explore*"],
      "js": ["inject-interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://grafana.xkdevops.com/explore*"],
      "js": ["content-grafana.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://zxl-log-analysis.vercel.app/*"],
      "js": ["content-analysis.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
